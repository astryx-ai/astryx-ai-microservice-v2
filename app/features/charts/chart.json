{
  "chart_mappings": {
    "bar-standard": "Best for showing values across categories — e.g., revenue by product, cost by department",
    "bar-multiple": "Ideal when category labels are long or comparison between many groups is needed",
    "bar-stacked": "Useful for comparing multiple series across categories — e.g., revenue of AWS vs Azure by region",
    "bar-negative": "Good for visualizing positive vs negative (e.g., CapEx vs OpEx by region)",
    "area-standard": "Best for showing cumulative trend of a metric over time — e.g., overall usage or sentiment growth",
    "area-linear": "Ideal for showing smooth progression of a metric over time",
    "area-stacked": "Good for comparing multiple series of stacked values over time or category",
    "area-step": "Perfect for data that changes in distinct steps or phases — e.g., server status monitoring",
    "line-standard": "Used for trends over time — e.g., monthly sales, usage, latency",
    "line-linear": "Smooth line trend — better when precision and continuity matters",
    "line-multiple": "Best for comparing trends of multiple metrics — e.g., compute vs storage usage",
    "line-dots": "Highlights individual data points on a line chart — useful for error rates, volatility",
    "line-step": "Step line charts for discrete value changes over time",
    "line-label": "Line charts with data labels for precise value display",
    "pie-standard": "Used to show simple part-to-whole ratios — e.g., distribution of costs or errors",
    "pie-label": "Same as pie but with internal labels — better when segments are clearly readable",
    "pie-interactive": "For part-to-whole charts where you want clean visuals with external legends",
    "pie-donut": "Stylized pie chart — good for customer plan distribution or product tiers",
    "radar-standard": "Used to show performance or value across multiple dimensions — e.g., scores, sales by month",
    "radar-lines-only": "Same as radar, but emphasizes points — good when counts or durations are shown",
    "radar-multiple": "Minimalist radar when grid distracts — ideal for subjective scores like satisfaction",
    "radial-standard": "For comparing multiple entities across the same dimensions — e.g., S&P vs NASDAQ sectors",
    "radial-stacked": "Stacked radial charts for hierarchical data display",
    "radial-progress": "Single progress indicator with percentage display — e.g., completion status, achievement levels",
    "candlestick-standard": "OHLC candlestick chart for intraday/daily price movements"
  },
